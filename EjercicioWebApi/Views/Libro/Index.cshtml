@using Servicios.ClasesBiblioteca

@model List<LibroDTO>

@{
    ViewBag.Title = "Listado Libros";
}
<link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.14.2/bootstrap-table.min.css" />
<link href="https://stackpath.bootstrapcdn.com/bootswatch/3.4.1/cerulean/bootstrap.min.css" rel="stylesheet" integrity="sha384-S0cN63+vYrG1/kfcUhtXsKZfyE9azrjw5p+Q5yYU+Dzjg60sZUEYsIKIb5O/oaT3" crossorigin="anonymous">
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js" integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.14.2/bootstrap-table.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>

<h2>Listado de libros</h2>

<p>
    @Html.ActionLink("Nuevo libro", "Create")
</p>

@using (Html.BeginForm("SearchByAuthor", "Libro", FormMethod.Post, htmlAttributes: new { @class = "text-right" }))
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <label for="Author">Buscar por autor: </label>
        <input type="text" id="Author" name="Author" />
        <input type="submit" value="Buscar" class="btn btn-primary" />
    </div>
}



<table class="table">
    <tr>
        <th>
            Título
        </th>
        <th>
            Año
        </th>
        <th>
            Género
        </th>
        <th>
            Autor
        </th>
        <th>
            Páginas
        </th>
        <th>
            Alquilado
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.anyo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.paginas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.alquilado)
            </td>
            <td>
                @Html.ActionLink("Modificar", "Edit", new { id = item.codigoobra }) |
                @Html.ActionLink("Mostrar Detalles", "Details", new { id = item.codigoobra }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.codigoobra })
            </td>
        </tr>
    }

</table>

